<androidx.cardview.widget.CardView android:id="@+id/ChangeCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/border_radius_default"
    app:cardElevation="10dp"
    android:layout_marginBottom="@dimen/list_item_distance"
    android:layout_marginHorizontal="@dimen/app_padding_horizontal"
    app:contentPaddingLeft="@dimen/cardview_padding"
    app:contentPaddingRight="@dimen/cardview_padding"
    app:contentPaddingTop="@dimen/cardview_padding"
    app:contentPaddingBottom="@dimen/cardview_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/list_student_carbon_import_export" />

</androidx.cardview.widget.CardView>